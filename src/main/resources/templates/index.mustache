            </div>
        </div><!--/.col-md-12 글 등록 버튼-->
        <br/>

        <!-- 게시글 목록 출력 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>게시글 번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종 수정일</th>
            </tr>
            </thead>

            <tbody id="tbody">
            {{#posts}} <!--#posts라는 List를 순회하는 mustache문법 , java의 for문과 비슷하다-->
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
            {{/posts}}
            </tbody>
        </table>
    </section>



